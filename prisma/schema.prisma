generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @db.VarChar(25)
  email     String   @unique @db.VarChar(100)
  password  String   @db.VarChar(100)
  name      String   @db.VarChar(100)
  is_ofc    Boolean  @default(false)
  id_ofc    String?  @unique @db.VarChar(25)
  oshimenId Int?     @db.Int
  token     String?  @db.VarChar(100)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  oshimen Member? @relation(fields: [oshimenId], references: [id])

  @@map("users")
}

model Member {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(100)
  call_name   String   @unique @db.VarChar(50)
  birth_date  String   @db.VarChar(25)
  blood_type  String   @db.VarChar(2)
  horoscope   String   @db.VarChar(25)
  height      String   @db.VarChar(5)
  twitter     String?  @db.VarChar(50)
  instagram   String?  @db.VarChar(50)
  tiktok      String?  @db.VarChar(50)
  profile_img String   @db.VarChar(255)
  is_grad     Boolean  @default(false)
  class       Class    @default(Trainee)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  users User[]

  @@map("members")
}

enum Class {
  Regular
  Trainee
}
